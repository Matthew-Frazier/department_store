<h1> <%= @item.id ? "Edit Item" : "Create Item" %> </h1>
<hr />
<%= form_for [@department, @item ] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>

  <%= f.label :price %>
  <%= f.number_field :price, required: true, step: :any, :precision => 2 %>

  <%= f.label :description %>
  <%= f.text_area :description, required: true, autofocus: true %>
  <%= f.submit %>
<% end %>